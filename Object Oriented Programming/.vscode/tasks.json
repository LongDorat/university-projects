{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Java: build & run active file",
      "type": "shell",
      "command": "powershell",
      "args":[
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}\\Build-ActiveFile.ps1",
        "-ActiveFilePath", "${file}"
      ],
      "group":{
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}